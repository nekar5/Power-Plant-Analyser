<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- AR Scene View -->
    <com.google.ar.sceneform.ArSceneView
        android:id="@+id/ar_scene_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Recording Controls (Bottom) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_recording_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Start/Stop Button (Center, always centered) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_record_start_stop"
            style="@style/Widget.Material3.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="ðŸ”´\nREC"
            android:textSize="16sp"
            app:backgroundTint="@color/accent_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Discard Button (Left) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_record_discard"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="ðŸ—‘ï¸"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_record_start_stop"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Ruler Control Button (Right of Record Button) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ruler_control"
            style="@style/Widget.Material3.Button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:visibility="gone"
            android:text="ðŸ“"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            app:backgroundTint="#FFD700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_record_start_stop"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Undo Button (Above OK Button) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ruler_undo"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="â†©"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/layout_right_buttons"
        app:layout_constraintTop_toBottomOf="@+id/layout_right_buttons" />

    <!-- OK Button (Top Right, next to Ruler Control Button) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ruler_ok"
        style="@style/Widget.Material3.Button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="êªœ"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:visibility="gone"
        app:backgroundTint="@color/accent_green"
        android:layout_marginTop="148dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_right_buttons"
        app:layout_constraintTop_toBottomOf="@+id/layout_right_buttons" />

    <!-- Left Top Button (Focus) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_focus"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="ðŸ”Ž"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Right Side Buttons (Ruler and Add) -->
    <LinearLayout
        android:id="@+id/layout_right_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Restart Button (Above Ruler Button) -->

        <!-- Ruler Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ruler"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="ðŸ“"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"/>

        <!-- Add Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add"
            android:layout_width="56dp"
            android:layout_height="56dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="ðŸ› ï¸"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"/>

    </LinearLayout>

    <!-- Crosshair (Center of screen) -->
    <ImageView
        android:id="@+id/crosshair"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/crosshair"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Distance Text Overlay (for ruler) -->
    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#80000000"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ruler_restart"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="âŸ²"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:visibility="gone"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_right_buttons"
        app:layout_constraintEnd_toEndOf="@+id/layout_right_buttons"
        app:layout_constraintStart_toStartOf="@+id/layout_right_buttons" />

</androidx.constraintlayout.widget.ConstraintLayout>

