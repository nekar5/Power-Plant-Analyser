<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.project.ProjectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/text_components_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/components"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Inverter Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_inverter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_components_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- Header - clickable to collapse/expand -->
                <LinearLayout
                    android:id="@+id/header_inverter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/inverter"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark" />

                    <ImageView
                        android:id="@+id/icon_expand_inverter"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:tint="@color/text_primary_dark" />
                </LinearLayout>

                <!-- Content - collapsible -->
                <LinearLayout
                    android:id="@+id/content_inverter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_inverter"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_marginTop="8dp"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false"
                        android:nestedScrollingEnabled="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_inverter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/add"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:backgroundTint="@color/surface_dark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_remove_inverter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/remove"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:backgroundTint="@color/surface_dark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Battery Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_inverter">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- Header - clickable to collapse/expand -->
                <LinearLayout
                    android:id="@+id/header_battery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/battery"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark" />

                    <ImageView
                        android:id="@+id/icon_expand_battery"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:tint="@color/text_primary_dark" />
                </LinearLayout>

                <!-- Content - collapsible -->
                <LinearLayout
                    android:id="@+id/content_battery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_battery"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_marginTop="8dp"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false"
                        android:nestedScrollingEnabled="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_battery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/add"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:backgroundTint="@color/surface_dark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_remove_battery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/remove"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:backgroundTint="@color/surface_dark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BMS Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_battery">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- Header - clickable to collapse/expand -->
                <LinearLayout
                    android:id="@+id/header_bms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/bms"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark" />

                    <ImageView
                        android:id="@+id/icon_expand_bms"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:tint="@color/text_primary_dark" />
                </LinearLayout>

                <!-- Content - collapsible -->
                <LinearLayout
                    android:id="@+id/content_bms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_bms"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_marginTop="8dp"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false"
                        android:nestedScrollingEnabled="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_bms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/add"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:backgroundTint="@color/surface_dark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_remove_bms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/remove"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:backgroundTint="@color/surface_dark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Config Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_bms">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- Header - clickable to collapse/expand -->
                <LinearLayout
                    android:id="@+id/header_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/configs"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark" />

                    <ImageView
                        android:id="@+id/icon_expand_config"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:tint="@color/text_primary_dark" />
                </LinearLayout>

                <!-- Content - collapsible -->
                <LinearLayout
                    android:id="@+id/content_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_config"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_marginTop="8dp"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false"
                        android:nestedScrollingEnabled="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_config"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/add"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:backgroundTint="@color/surface_dark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_remove_config"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/remove"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:backgroundTint="@color/surface_dark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="@string/start"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:backgroundTint="@color/surface_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_config" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
