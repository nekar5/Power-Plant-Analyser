<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Connection status indicator -->
        <TextView
            android:id="@+id/connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/status_indicator_background"
            android:drawablePadding="4dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="Offline"
            android:textColor="@color/text_primary_dark"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/status_indicator_offline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Last Updated and System Status Row -->
        <TextView
            android:id="@+id/text_last_updated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary_dark"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/text_system_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connection_status"
            tools:text="Last Updated: 2025-10-29 14:30:45" />

        <TextView
            android:id="@+id/text_system_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textColor="@color/text_secondary_dark"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_last_updated"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_last_updated"
            app:layout_constraintTop_toTopOf="@+id/text_last_updated"
            tools:text="Grid Status: Connected" />

        <!-- Power Flow Diagram -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_power_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/text_last_updated">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- SOLAR -->

                <TextView
                    android:id="@+id/arrow_solar_left2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="←"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_margin="1dp"
                    app:layout_constraintBottom_toBottomOf="@+id/card_inverter"
                    app:layout_constraintEnd_toStartOf="@+id/card_grid"
                    app:layout_constraintStart_toEndOf="@+id/card_inverter"
                    app:layout_constraintTop_toTopOf="@+id/card_inverter" />

                <TextView
                    android:id="@+id/arrow_solar_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="←"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_margin="1dp"
                    app:layout_constraintBottom_toBottomOf="@+id/card_inverter"
                    app:layout_constraintEnd_toStartOf="@+id/card_inverter"
                    app:layout_constraintStart_toEndOf="@+id/card_battery"
                    app:layout_constraintTop_toTopOf="@+id/card_inverter" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_solar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/solar_yellow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/text_solar_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="2.3 kW" />

                        <TextView
                            android:id="@+id/text_solar_daily"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            tools:text="Daily: 3.68 kWh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SOLAR"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Down Arrow from Solar -->
                <TextView
                    android:id="@+id/arrow_solar_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↓"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/card_inverter"
                    app:layout_constraintStart_toStartOf="@+id/card_inverter"
                    app:layout_constraintTop_toBottomOf="@id/card_solar" />

                <!-- Battery and Inverter Row -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    app:cardBackgroundColor="@color/battery_green"
                    app:layout_constraintBottom_toBottomOf="@+id/card_inverter"
                    app:layout_constraintEnd_toStartOf="@id/card_inverter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/card_inverter">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/text_battery_soc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="98%" />

                        <TextView
                            android:id="@+id/text_battery_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            tools:text="0.0 kW" />

                        <TextView
                            android:id="@+id/text_battery_daily_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            tools:text="Chg: 0.03 kWh" />

                        <TextView
                            android:id="@+id/text_battery_daily_discharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            tools:text="Dchg: 0.02 kWh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BATTERY"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- INVERTER (Center) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_inverter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:background="@color/inverter_gray"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/card_solar"
                    app:layout_constraintStart_toStartOf="@+id/card_solar"
                    app:layout_constraintTop_toBottomOf="@+id/card_solar">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INVERTER"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- GRID -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:cardBackgroundColor="@color/grid_red"
                    app:layout_constraintBottom_toBottomOf="@+id/card_inverter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/card_inverter"
                    app:layout_constraintTop_toTopOf="@+id/card_inverter">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/text_grid_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="1.7 kW" />

                        <TextView
                            android:id="@+id/text_grid_daily_feedin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            tools:text="Feed-in: 2.02 kWh" />

                        <TextView
                            android:id="@+id/text_grid_daily_import"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            tools:text="Import: 4.18 kWh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GRID"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Up Arrow to Battery -->
                <TextView
                    android:id="@+id/arrow_battery_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↓"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/card_inverter"
                    app:layout_constraintStart_toStartOf="@+id/card_inverter"
                    app:layout_constraintTop_toBottomOf="@+id/card_inverter" />

                <!-- LOAD -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/load_blue"
                    app:layout_constraintEnd_toEndOf="@+id/card_inverter"
                    app:layout_constraintStart_toStartOf="@+id/card_inverter"
                    app:layout_constraintTop_toBottomOf="@id/arrow_battery_up">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/text_load_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="0.53 kW" />

                        <TextView
                            android:id="@+id/text_consumption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            tools:text="Consumption" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOAD"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/card_power_flow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_inverter_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Inverter Status: Grid connected" />

                <TextView
                    android:id="@+id/text_grid_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="Grid Status: Grid connected" />
                
                <!-- Refresh Button -->
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Power Flow Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_power_flow_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/btn_refresh">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power Flow"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_power_flow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Daily Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_daily_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/card_power_flow_details">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Summary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_daily_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Cumulative Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_cumulative_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/card_daily_summary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cumulative Summary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_cumulative_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- More Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More ▼"
            android:layout_marginTop="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:backgroundTint="@color/surface_dark"
            app:layout_constraintTop_toBottomOf="@id/card_cumulative_summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Advanced Info (Initially Hidden) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/btn_more">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Info"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_advanced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- No Data Message -->
        <TextView
            android:id="@+id/text_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No inverter data available"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_refresh"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/refresh"

            app:backgroundTint="@color/surface_dark"
            app:icon="@android:drawable/ic_popup_sync"
            app:layout_constraintEnd_toEndOf="@+id/card_status"
            app:layout_constraintStart_toStartOf="@+id/card_status"
            app:layout_constraintTop_toBottomOf="@+id/card_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
