<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Connection status indicator -->
        <TextView
            android:id="@+id/connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/status_indicator_background"
            android:drawablePadding="4dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="Offline"
            android:textColor="@color/text_primary_dark"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/status_indicator_offline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Fetch data title -->
        <TextView
            android:id="@+id/text_fetch_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fetch_data"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/connection_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Weather section -->
        <TextView
            android:id="@+id/text_weather_last_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_secondary_dark"
            android:layout_marginEnd="8dp"
            tools:text="Last request: 2025-01-15 14:30"
            app:layout_constraintTop_toBottomOf="@id/text_fetch_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_station_last_request" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_fetch_weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/weather"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:backgroundTint="@color/surface_dark"
            app:layout_constraintTop_toBottomOf="@id/text_weather_last_request"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_fetch_station" />

        <TextView
            android:id="@+id/text_weather_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_secondary_dark"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            tools:text="Dates range: 01.01.2025 - 15.01.2025"
            app:layout_constraintTop_toBottomOf="@id/btn_fetch_weather"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_station_dates" />

        <!-- Station section -->
        <TextView
            android:id="@+id/text_station_last_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_secondary_dark"
            android:layout_marginStart="8dp"
            tools:text="Last request: Never"
            app:layout_constraintTop_toBottomOf="@id/text_fetch_data"
            app:layout_constraintStart_toEndOf="@id/text_weather_last_request"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_fetch_station"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/station"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:backgroundTint="@color/surface_dark"
            app:layout_constraintTop_toBottomOf="@id/text_station_last_request"
            app:layout_constraintStart_toEndOf="@id/btn_fetch_weather"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_station_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_secondary_dark"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            tools:text="Dates range: No data"
            app:layout_constraintTop_toBottomOf="@id/btn_fetch_station"
            app:layout_constraintStart_toEndOf="@id/text_weather_dates"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Configuration info -->
        <TextView
            android:id="@+id/text_config_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/text_secondary_dark"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="Config last changed: 2025-01-15 14:30\nLast fetch for config: 2025-01-15 14:35"
            app:layout_constraintTop_toBottomOf="@id/text_station_dates"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Station Analysis Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_station_analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Station Analysis"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:backgroundTint="@color/surface_dark"
            app:layout_constraintTop_toBottomOf="@id/text_config_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Station Analysis Recommendations Container -->
        <LinearLayout
            android:id="@+id/layout_station_recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btn_station_analysis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Hide Recommendations Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hide_recommendations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hide"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.TextButton"
            app:layout_constraintTop_toBottomOf="@id/layout_station_recommendations"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Progress Dialog Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/text_progress_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fetching weather data..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scroll_progress_messages"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/layout_progress_messages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
