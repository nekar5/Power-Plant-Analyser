<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step_3_select_bms"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_bms_model"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bms_model">

            <AutoCompleteTextView
                android:id="@+id/act_bms_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bms_placement"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radio_bms_placement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_standalone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/without_tower_standalone"
                android:checked="true" />

        </RadioGroup>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_add_more_bms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/add_more_bms_later" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_step3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/cancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:backgroundTint="@color/surface_dark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_config"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:backgroundTint="@color/surface_dark" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

